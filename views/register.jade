extends _layout
block variables
	- var categories = (cats || [])

block content
	div.container#content
		div.row
			div.col-md-8.col-md-offset-2
				div.panel.panel-default
					div.panel-heading
						h4= t("ns.general:register.title")
					div.panel-body
						form(method="POST")
							div.form-group.required: input.form-control(type='text', name='username', placeholder= t("ns.general:register.placeholder_username"),required)
							div.form-group.required: input.form-control(type='password', name='password', placeholder= t("ns.general:register.placeholder_password"),required)
							div.form-group.required: input.form-control(type='password', name='passwordConfirm', placeholder= t("ns.general:register.placeholder_password_confirm"),required)
							div.form-group: input.form-control(type='text', name='preferredName', placeholder= t("ns.general:register.placeholder_preferred_name"))
							div.form-group: span.message.text-danger(style= error ? "":"display:none")= error || ""
							input.btn.btn-submit(type='submit', name='register', value= t("ns.general:register.btn_register"),data-loading-text=t("ns.general:register.loading"))
					div.panel-footer
						a(href='/login')= t("ns.general:register.link_login")
block javascript